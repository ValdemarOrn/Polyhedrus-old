<UserControl x:Class="Polyhedrus.UI.Slider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             x:Name="Main"
             d:DesignHeight="15" d:DesignWidth="150">
    <Grid>
        <Rectangle RadiusX="3" RadiusY="3" Fill="{Binding ElementName=Main, Path=Fill}" HorizontalAlignment="Stretch" />
        <Rectangle RadiusX="3" RadiusY="3" Fill="{Binding ElementName=Main, Path=Foreground}" Width="{Binding ElementName=Main, Path=SliderLength}" HorizontalAlignment="Left" />
    </Grid>
</UserControl>
