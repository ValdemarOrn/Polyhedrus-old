<Window
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:local="clr-namespace:Polyhedrus.UI" 
				xmlns:UI="clr-namespace:Polyhedrus.UI" 
				xmlns:sys="clr-namespace:System;assembly=mscorlib"
				x:Class="Polyhedrus.UI.SynthView"
				x:Name="Main"
				Title="MainWindow" Height="600" Width="1020">
	<Grid Background="#FFE5E5E5">

		<UI:ModuleControl x:Name="OscModule" Title="Oscillator 1" HorizontalAlignment="Left" VerticalAlignment="Top" Height="191" Width="370" Margin="5,5,0,0"
						  Selectors="{Binding Path=OscNames, Mode=TwoWay}" Panel="{Binding Path=OscView}" />

		<UI:ModuleControl x:Name="AmpEnvModule" Title="Amp Envelope" HorizontalAlignment="Left" VerticalAlignment="Top" ShowComboBox="Collapsed" Height="100" 
						  Panel="{Binding Path=AmpEnvView}" Width="305" Margin="380,5,0,0" />

		<UI:ModuleControl x:Name="FilterModule" Title="Filter 1" HorizontalAlignment="Left" VerticalAlignment="Top" Height="191" Width="305" Margin="690,5,0,0" 
						  Panel="{Binding Path=FilterView}" />
		
		<UI:ModuleControl x:Name="FilterEnvModule" Title="Filter Envelope" HorizontalAlignment="Left" VerticalAlignment="Top" Height="100" Width="305" Margin="690,196,0,0">
			<UI:ModuleControl.Panel>
				<UI:EnvelopeView HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0" />
			</UI:ModuleControl.Panel>
		</UI:ModuleControl>
	</Grid>
</Window>
